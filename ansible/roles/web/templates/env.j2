# Environment Type
DOCKER_ENVIRONMENT=true

# Django settings
DJANGO_SETTINGS_MODULE=DjangoEventLocator.settings
DJANGO_SECRET_KEY={{ django_secret_key | default('your-secret-key-here') }}
DJANGO_DEBUG={{ django_debug | default('0') }}
DJANGO_ALLOWED_HOSTS={{ django_allowed_hosts | default('localhost,127.0.0.1') }}

# Database settings (PostgreSQL)
POSTGRES_DB={{ postgres_db | default('django_db') }}
POSTGRES_USER={{ postgres_user | default('django') }}
POSTGRES_PASSWORD={{ postgres_password | default('django_password') }}
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis settings
REDIS_HOST=redis
REDIS_PORT=6379

# Email settings
EMAIL_HOST={{ email_host | default('mailhog') }}
EMAIL_PORT={{ email_port | default('1025') }}
EMAIL_USE_TLS={{ email_use_tls | default('False') }}
EMAIL_HOST_USER={{ email_host_user | default('') }}
EMAIL_HOST_PASSWORD={{ email_host_password | default('') }}

# Static and media files
STATIC_URL=/static/
MEDIA_URL=/media/

# Security settings
CSRF_TRUSTED_ORIGINS={{ csrf_trusted_origins | default('http://localhost,https://localhost,http://127.0.0.1,https://127.0.0.1') }}
SECURE_SSL_REDIRECT={{ secure_ssl_redirect | default('True') }}
SESSION_COOKIE_SECURE={{ session_cookie_secure | default('True') }}
CSRF_COOKIE_SECURE={{ csrf_cookie_secure | default('True') }}
SECURE_HSTS_SECONDS={{ secure_hsts_seconds | default('31536000') }}
SECURE_HSTS_INCLUDE_SUBDOMAINS={{ secure_hsts_include_subdomains | default('True') }}
SECURE_HSTS_PRELOAD={{ secure_hsts_preload | default('True') }}