# Global options
{
    admin off
}

# Default site
localhost, 127.0.0.1 {
    # Handle static files
    handle /static/* {
        root * /static
        file_server
    }

    # Handle media files
    handle /media/* {
        root * /media
        file_server
    }

    # Proxy everything else to Django
    handle {
        reverse_proxy web:8000
    }

    # Enable compression
    encode gzip

    # Log requests
    log {
        output stdout
    }
}
